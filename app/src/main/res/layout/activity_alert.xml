<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_alert_container"
    android:background="@color/colorRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <wangdaye.com.geometricweather.ui.widget.insets.FitTopSystemBarAppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:theme="@style/GeometricWeatherTheme.AppbarTheme" >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/activity_alert_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="@string/action_alert"
            app:navigationIcon="@drawable/ic_toolbar_back"
            app:navigationContentDescription="@string/content_desc_back"
            app:popupTheme="@style/GeometricWeatherTheme.AppbarPopupTheme" />

    </wangdaye.com.geometricweather.ui.widget.insets.FitTopSystemBarAppBarLayout>

    <wangdaye.com.geometricweather.ui.widget.insets.FitBottomSystemBarRecyclerView
        android:id="@+id/activity_alert_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>