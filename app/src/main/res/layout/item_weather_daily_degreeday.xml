<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="UnusedAttribute">

    <LinearLayout
        android:id="@+id/item_weather_daily_degreeday_heating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:src="@drawable/ic_mode_heat"
            android:layout_gravity="center_vertical"
            style="@style/material_icon" />

        <TextView
            android:id="@+id/item_weather_daily_degreeday_heatingText"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/little_margin"
            android:layout_marginBottom="@dimen/little_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:importantForAccessibility="no"
            style="@style/title_text"
            tools:text="06:00↑ / 18:00↓" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_weather_daily_degreeday_cooling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:src="@drawable/ic_mode_cool"
            android:layout_gravity="center_vertical"
            style="@style/material_icon" />

        <TextView
            android:id="@+id/item_weather_daily_degreeday_coolingText"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/little_margin"
            android:layout_marginBottom="@dimen/little_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:importantForAccessibility="no"
            style="@style/title_text"
            tools:text="06:00↑ / 18:00↓" />

    </LinearLayout>

</LinearLayout>